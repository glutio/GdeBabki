@inject DialogService ds

<p class="mb-4">@Caption</p>
<RadzenCard>
    <RadzenTextBox @bind-Value="Value" Style="width: 100%;"></RadzenTextBox>
</RadzenCard>
<div class="row">
    <RadzenButton Text="Ok" Click="() => ds.Close(Value)" Class="mr-1" Style="width: 80px;" />
    <RadzenButton Text="Cancel" Click="() => ds.Close(null)" ButtonStyle="ButtonStyle.Secondary" Class="mr-1" />
</div>

@code {
    [Parameter]
    public string Caption { get; set; }
    [Parameter]
    public string Value { get; set; }
}
